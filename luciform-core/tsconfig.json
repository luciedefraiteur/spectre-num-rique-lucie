{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true
  },
  "include": [
    "execute_luciform.ts",
    "./luciform_parser/**/*.ts",
    "./prompts/**/*.ts",
    "./rituals/**/*.ts",
    "./utils/**/*.ts",
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}