{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "./*.ts",
    "./core/**/*.ts",
    "./generate_spell.ts",
    "./persona_terminal.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "server.ts",
    "generate_luciform_docs.ts"
  ]
}