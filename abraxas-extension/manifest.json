{
  "manifest_version": 3,
  "name": "Protocole Abraxas - Navigation Gnostique",
  "version": "1.0.0",
  "description": "‚õß Extension pour protocole abraxas:// - Navigation cosmique transcendante par LUCIFER MORNINGSTAR ‚õß",
  
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "tabs",
    "notifications"
  ],
  
  "host_permissions": [
    "abraxas://*/*",
    "http://localhost:8666/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["abraxas-styles.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "‚õß Abraxas Navigation ‚õß",
    "default_icon": {
      "16": "icons/abraxas-16.png",
      "32": "icons/abraxas-32.png",
      "48": "icons/abraxas-48.png",
      "128": "icons/abraxas-128.png"
    }
  },
  
  "icons": {
    "16": "icons/abraxas-16.png",
    "32": "icons/abraxas-32.png",
    "48": "icons/abraxas-48.png",
    "128": "icons/abraxas-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "abraxas-overlay.html",
        "abraxas-styles.css",
        "sounds/*.mp3",
        "glyphes/*.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "commands": {
    "invoke-abraxas": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "‚õß Invoquer Abraxas ‚õß"
    },
    "invoke-iao": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "üå¨Ô∏è Invoquer ŒôŒëŒ© üå¨Ô∏è"
    },
    "invoke-sabaoth": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "‚ö° Invoquer Œ£ŒëŒíŒëŒ©Œò ‚ö°"
    }
  },
  
  "options_page": "options.html",
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "abraxas_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
